{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<h1 class="bigtitle">Stock Malin...</h1>
<div class="container">
    <form method="post" class="formlogin">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            Bonjour {{ app.user.username }}, <a href="{{ path('app_logout') }}">DÃ©connexion</a>
        </div>
    {% endif %}

    <input placeholder="Email" type="email" value="{{ last_username }}" name="email" id="inputEmail" class="inputlogin" autocomplete="email" required autofocus>
    <input placeholder="Password" type="password" name="password" id="inputPassword" class="inputlogin" autocomplete="current-password" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

    <button class="buttonnew" type="submit">
        Connexion
    </button>
    </form>
</div>
{% endblock %}
