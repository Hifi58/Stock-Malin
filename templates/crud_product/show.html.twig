{% extends 'base.html.twig' %}

{% block title %}Produits{% endblock %}

{% block body %}
    <h1>Produits</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Place</th>
                <td>{{ product.place }}</td>
            </tr>
            <tr>
                <th>Reference</th>
                <td>{{ product.reference }}</td>
            </tr>
            <tr>
                <th>Buying_date</th>
                <td>{{ product.buyingDate ? product.buyingDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Sav_date</th>
                <td>{{ product.savDate ? product.savDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ product.price }}</td>
            </tr>
            <tr>
                <th>Utilisation_tip</th>
                <td>{{ product.utilisationTip }}</td>
            </tr>
            <tr>
                <th>Ticket_pictures</th>
                <td>{{ product.ticketPictures }}</td>
            </tr>
            <tr>
                <th>Manual</th>
                <td>{{ product.manual }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('crud_product_index') }}">back to list</a>

    <a href="{{ path('crud_product_edit', {'id': product.id}) }}">edit</a>

    {{ include('crud_product/_delete_form.html.twig') }}
{% endblock %}
