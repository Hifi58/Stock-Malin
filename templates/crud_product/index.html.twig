{% extends 'base.html.twig' %}

{% block title %}Historique des achats{% endblock %}

{% block body %}
    <h1 class="bigtitle">Historique des achats</h1>

    <table class="table">
        <thead>
            <tr class="list">
                <th>Id</th>
                <th>Nom</th>
                <th>Lieu d'achat</th>
                <th>RÃ©ference</th>
                <th>Date d'achat</th>
                <th>Date de fin de garantie</th>
                <th>Prix</th>
                <th>Conseils d'utilisations</th>
                <th>Ticket d'achat</th>
                <th>Manuel d'utilisation</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.name }}</td>
                <td>{{ product.place }}</td>
                <td>{{ product.reference }}</td>
                <td>{{ product.buyingDate ? product.buyingDate|date('Y-m-d') : '' }}</td>
                <td>{{ product.savDate ? product.savDate|date('Y-m-d') : '' }}</td>
                <td>{{ product.price }}</td>
                <td>{{ product.utilisationTip }}</td>
                <td>{{ product.ticketPictures }}</td>
                <td>{{ product.manual }}</td>
                <td>
                    <a href="{{ path('crud_product_show', {'id': product.id}) }}">show</a>
                    <a href="{{ path('crud_product_edit', {'id': product.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('crud_product_new') }}">Create new</a>
{% endblock %}
